# Docker Environment Configuration
# Copy this to .env and update with your actual values

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=student_discipline
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-please

# API Configuration
PORT=3001
NODE_ENV=production
FRONTEND_URL=http://localhost:3000

# External API Keys (Optional - set these for full functionality)
GEMINI_API_KEY=your-gemini-api-key-here
GOOGLE_CLIENT_ID=your-google-oauth-client-id-here
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret-here

# Logging
LOG_LEVEL=info