{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "npm run start:prod",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "LOG_LEVEL": "info",
        "COMPRESSION_ENABLED": "true",
        "RATE_LIMIT_ENABLED": "true",
        "HELMET_CSP_ENABLED": "true",
        "FORCE_HTTPS": "true"
      }
    }
  }
}