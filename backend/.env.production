# Production Environment Configuration
# Student Discipline System Backend

# Server Configuration
PORT=3001
NODE_ENV=production
FRONTEND_URL=https://student-discipline-system.vercel.app

# Database Configuration (Use DATABASE_URL for production)
DATABASE_URL=postgresql://username:password@host:port/database
# Fallback individual config (not recommended for production)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=student_discipline_prod
DB_USER=username
DB_PASSWORD=password

# Database Connection Pool Settings
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# JWT Configuration (MUST be changed in production)
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_SUPER_SECRET_KEY_256_BITS_MINIMUM
JWT_REFRESH_SECRET=CHANGE_THIS_IN_PRODUCTION_REFRESH_SECRET_KEY_256_BITS
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret

# Gemini AI Configuration (Optional - Free Tier)
GEMINI_API_KEY=your-production-gemini-api-key

# Security Configuration
CORS_ORIGIN=https://student-discipline-system.vercel.app
HELMET_CSP_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/student-discipline/app.log

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Performance Configuration
COMPRESSION_ENABLED=true
CACHE_ENABLED=true
CACHE_TTL=300

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# SSL Configuration
SSL_ENABLED=true
FORCE_HTTPS=true

# Session Configuration
SESSION_SECURE=true
SESSION_SAME_SITE=strict